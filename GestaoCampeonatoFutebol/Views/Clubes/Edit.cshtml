@model GestaoCampeonatoFutebol.Models.Clube

@{
    ViewData["Title"] = "Editar";
}

<div class=" row">
    @{
        if (User.IsInRole("Admin"))
        {
            <div class="col-1">
                <a asp-action="Index" class=" btn btn-light">
                    <img src="/Assets/Icons/arrowBack.png" width="30" height="30" />
                </a>
            </div>
        }
        else
        {
            <div class="col-1">
                <a asp-action="Index" asp-controller="Home" class=" btn btn-light">
                    <img src="/Assets/Icons/arrowBack.png" width="30" height="30" />
                </a>
            </div>
        }
    }

    <div class="col-9">
        <h1>@ViewBag.Title</h1>
    </div>
</div>

<h4>Clube</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Presidente" class="control-label"></label>
                <input asp-for="Presidente" class="form-control" />
                <span asp-validation-for="Presidente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">Estadio</label>
                <select asp-for="EstadioId" class="form-control" asp-items="ViewBag.EstadioId"></select>
                <span asp-validation-for="EstadioId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="botaoDanger" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
