@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
        <li class="nav-item">
           
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                <span>
                    <img src="/Assets/Icons/account_circle.png" width="30" height=" 30" /> Area Pessoal
                </span>
                </a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">
                <img src="/Assets/Icons/logout.png" height="30" />
            </button>
        </form>
    </li>
}
else
{
  
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">
                <img src="/Assets/Icons/login.png" height="30" />
            </a>
    </li>
}
</ul>
